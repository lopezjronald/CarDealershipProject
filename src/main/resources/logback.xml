<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%-5level] %logger{40} - %message%n</pattern>
        </encoder>
    </appender>

    <logger name="com.dealership.Driver" level="DEBUG"/>

    <root leve="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>